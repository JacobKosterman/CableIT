<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewQuoteActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/txtQuoteNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:ems="10"
            android:inputType="number"
            android:hint="Quote Number" />

        <EditText
            android:id="@+id/txtCompanyID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:ems="10"
            android:inputType="number"
            android:hint="Company ID" />

        <EditText
            android:id="@+id/txtSiteAddressID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:ems="10"
            android:inputType="number"
            android:hint="Site Address ID" />

        <EditText
            android:id="@+id/txtBillingAddressID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:ems="10"
            android:inputType="number"
            android:hint="Billing Address ID" />

        <Button
            android:id="@+id/btnSaveQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Quote"
            android:gravity="bottom|center"/>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>